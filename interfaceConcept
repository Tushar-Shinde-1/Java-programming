import java.util.Scanner;
interface basicInfo{
    void enterInfo();
    void displayInfo();
}
interface education{
    void enterEducation();
    void displayEducation();
}
interface currentStatus{
    void enterStatus();
    void displayStatus();
}
interface person extends basicInfo,education,currentStatus
{
    void printInfo();
}
class Details implements person
{
    Scanner ip=new Scanner(System.in);
    //var for basic info
 String name,age,address;
 int mobNo;
 //var for education info
 float ssc,hsc;
 String  currentEduvation;
 //var for current status
 String currentStatus,workPlace ;

 public void enterInfo()
 {
    System.out.print("enter the name");
    name=ip.nextLine();
    System.out.print("enter the age");  
    age=ip.nextLine();
    System.out.print("enter the address");
    address=ip.nextLine();
    System.out.print("enter the mob no");
    mobNo=ip.nextInt();
    ip.nextLine();

 }
 public void displayInfo()
 {
    System.out.println("NAME :"+name);
    System.out.println( "AGE :"+age);
    System.out.println("ADDRESS :"+address);
    System.out.println("MOB :"+mobNo);
 }
 public void enterEducation()
 {
    System.out.print("enter the ssc mark ");
    ssc=ip.nextFloat();
    ip.nextLine();
    System.out.print("enter the hsc mark ");
    hsc=ip.nextFloat();
    ip.nextLine();
    System.out.print("enter the current education");
    currentEduvation=ip.nextLine();
    }
    public void displayEducation()
    {
        System.out.println("SSC mark :"+ssc);
        System.out.println("hsc mark "+hsc);
        System.out.println("current eductaion"+ currentEduvation);
    }
    public void enterStatus()
    {
        System.out.print("what you does currently");
        currentStatus=ip.nextLine();
        System.out.print("enter the work place");
        workPlace=ip.nextLine();
        
    } 
    public void displayStatus()
    {
        System.out.println("Current Status :"+currentStatus);
        System.out.println("workplace :"+workPlace);

    }
    public void printInfo()
    {
     displayInfo();
     displayEducation();
     displayStatus();

    }

}
class studentinterface
{
    public static void main(String arg[])
    {
        Details d=new Details();
        d.enterInfo();
        d.enterEducation();
        d.enterStatus();
        d.printInfo();


    }
}
