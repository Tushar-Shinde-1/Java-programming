
import java.util.Scanner;

class Artist {

    String name;
    static String typeOfField = "Artist";
    float experience;
    int noOfArt;
    String art[];
    int rates;

    public Artist() {
        experience = 0;
        rates = 0;
    }

    public Artist(int a, String s, int b) {
        experience = a;
        name = s;
        rates -= b;
    }

    public void input() {
        Scanner sc = new Scanner(System.in);
        System.out.print("Enter the name of artist :");
        name = sc.next();
        System.out.print("Enter the experience of artist in year:");
        experience = sc.nextInt();
        System.out.print("how many art field are you working with :");
        noOfArt = sc.nextInt();
        art = new String[noOfArt];

        System.out.print("Enter the name of your  Art fields :");
        for (int i = 0; i < noOfArt; i++) {
            art[i] = sc.next();
        }

        System.out.print("Enter your average rates  in rupees:");
        rates = sc.nextInt();
        System.out.println();
    }

    static public void display() {
        System.out.println("Artfield :" + typeOfField);

    }

    public void display1() {
        System.out.println("name :" + name);
        System.out.println("Experience :" + experience + " years");
        System.out.println("Rates :" + rates + "ruppes");
        System.out.println("Type of Art :");
        for (int x = 0; x < noOfArt; x++) {
            System.out.println(x + 1 + "." + art[x]);
        }
        System.out.println();
    }

}

class first {

    public static void main(String[] args) {
        System.out.println("Welcome to the Tushar's Art World");
        int ch;
        int n=0;
        Scanner sc = new Scanner(System.in);
        Artist T[] = new Artist[10];

        do {

            System.out.println("Select your choice");
            System.out.println("1.Complete the artist profile\n2.display the list of Artist\n3.exit");
            ch = sc.nextInt();

            switch (ch) {
                case 1:
                 
                    System.out.print("for how many artists you want to create profile :");
                    n = sc.nextInt();
                    for(int i=0;i<n;i++)
                    { System.out.println("enter information of artist :"+(i+1));
                        T[i]=new Artist();
                        T[i].input();
                        T[i]=new Artist();
                        T[i].input();
                    }
                
                    break;

                case 2:
                for(int i=0;i<n;i++)
                  { System.out.println("Artist :"+(i+1) );
                    Artist.display();
                    T[i].display1();
                   
                  }

                  break;
            }

        } while (ch != 3);
    }
}
